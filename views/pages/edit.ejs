<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container">
      <%- include('../partials/header'); %>
      <form action="/edit/<%=article._id%>" method="post">
        <h1 class="form">Edit Post</h1>
        <div class="form-input">
          <div class="label"><label for="title">Title</label></div>
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Edit Title"
          /><br />
        </div>
        <div class="form-input">
          <div class="label"><label for="createPost"></label></div>
          <textarea
            placeholder="Rewrite Post"
            id="content"
            name="content"
            style="height: 200px; width: 80%"
          ></textarea>
        </div>
        <br />
        <button type="submit">Update</button>
      </form>

      <%- include('../partials/footer'); %>
    </div>
    <!-- <script src="index.js"></script> -->
  </body>
</html>
